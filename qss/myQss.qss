/* 滚动条 */
QScrollBar:vertical
{
    width:8px;
    border: none;
    background: transparent;
    margin-left:2px;
    margin-right:2px;
}

QScrollBar::handle:vertical
{
    width:8px;
    background:rgb(60, 60, 60);
    border-radius:4px;
}

QScrollBar::handle:vertical:hover
{
    background:rgb(94, 94, 94);
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical
{
    border: none;
    background: none;
    color: none;
}

QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical
{
    border: none;
    background: none;
    color: none;
}

QScrollBar::sub-page:vertical,QScrollBar::add-page:vertical
{
    border: none;
    background: none;
    color: none;
}

/* 滑块 */
QSlider::groove:horizontal
{
    border: 0px solid #bbb;
}

QSlider::handle:horizontal  {
    width:5px;
    background: white;
    border:3px solid;
    border-radius:4px;
    margin-top:6px;
    margin-bottom:6px;
    border-left-color:white;
    border-right-color:#1296db;
    border-top-color:white;
    border-bottom-color:#1296db;
}

QSlider::handle:horizontal:hover  {
    width:7px;
    background: white;
    border:3px solid;
    border-radius:5px;
    margin-top:5px;
    margin-bottom:5px;
    border-left-color:white;
    border-right-color:#1296db;
    border-top-color:#1296db;
    border-bottom-color:white;
}

QSlider::add-page:groove:horizontal  {
    background: white;
    border:0px solid red;
    border-radius:2px;
    margin-top:9px;
    margin-bottom:9px;

}

QSlider::sub-page:groove:horizontal  {
    border:0px solid red;
    border-radius:2px;
    margin-top:9px;
    margin-bottom:9px;
    background: #1296db;
}



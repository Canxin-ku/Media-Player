/* 总体的style */
#Widget
{
    background-color:#000000;
    border:none;
}


QWidget#widget_operate
{
    background:none;
}

QTabWidget#widget_tab::pane
{
    border:none;
    background-color:#1A1A1A;
    border-top: 2px solid #323232;
}

QTabWidget#widget_tab::tab-bar
{
    alignment: center;
}

QTabBar::tab
{
    height:30;
    color:#969696;
    background-color:#1A1A1A;
    min-width: 8ex;
    font:12px;
}

QTabBar::tab:selected
{
    color:#1296db;
    background-color:#323232;
    min-width: 8ex;
}

QTabBar::tab:first,QTabBar::tab:last
{
    width:51;
}

QTabBar::tab:second
{
    width:72;
}

QListWidget
{
    border-top:none;
    border-left:none;
    border-right:none;
    border-bottom: 2px solid #323232;
    background-color:#1A1A1A;
    outline:none;
    font:15px;
}

#listWidget_play::item
{
    background-color:#1A1A1A;
    color:#969696;
    padding:8px;
    border:transparent;
}

#listWidget_play::item:hover
{
    background-color:#323232;
}


#listWidget_play::item:selected
{
    border-left: 5px solid #1296db;
    color:#1296db;
}

QLabel
{
    color:#969696;
}

